<div id = "menu_font" style="background:url('http://www.mrwallpaper.com/wallpapers/gradient-background.jpg')">

<div style="padding-top:50px; padding-bottom:100px" >
  
  <div style="padding-left:80px;color:white">
    <h1 style="font-size:80px">MY ZONE  <small style="font-size:30px;color:white"> ; 강의실을 간단하고 편리하게 예약하는 방법 </small></h1>
   
  </div>
  
  <div class="row">
    <div class="col-md-8 col-sm-8" style="padding-left:100px;">
      <!--그림 슝슝 넘어가는거-->
      <!--<div style="padding-left:80px; padding-top:40px; padding-bottom:20px; color:white">-->
        <!--<h1 style="font-size:80px">MY ZONE</h1>-->
        <!--<h3 style="margin-top:-10px">[ : 강의실을 좀 더 간단하고 손쉽게 예약하는 방법 ]</p>-->
        
      <!--</div>-->
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          <li data-target="#carousel-example-generic" data-slide-to="3"></li>
        </ol>
      
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          
          <div class="item active">
            <img src="/img/1.png" />
            <!--이미지 밑에 설명-->
            
          </div>
          
          <div class="item">
            <img src="/img/2.png" />
            <!--이미지 밑에 설명-->
            
          </div>
          
          <div class="item">
            <img src="/img/3.png" />
            <!--이미지 밑에 설명-->
            
          </div>
          
          <div class="item">
            <img src="/img/4.png" />
            <!--이미지 밑에 설명-->
            
          </div>
          
        </div>
      
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div><!--div class="col-md-8"-->
    
    <div class="col-md-4 col-sm-6" >
      <div class="panel panel-default" style="margin-right:100px">
        <div class="panel-body">
          <p align="center" style="font-size:30px; margin-bottom:30px; margin-top:10px" id = "menu_font">COME IN, LOG IN !</p>
          <div class="jumbotron">
            <div id = "menu_font" style="padding-right:20px; padding-left:20px">
        
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
                <%= f.email_field :email, autofocus: true, :placeholder => "이메일 주소", :class => "form-control"%>
              
              <br>
            
                <%= f.password_field :password, autocomplete: "off", :placeholder => "비밀번호", :class => "form-control" %>
             
            <div align="right"> 
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "로그인 상태 유지" %>
              <% end -%>
            </div>
            

          <br>
        
          <div class="actions" id = "menu_font" style = "font-size:25px">
            <input type="submit" name="commit" class="btn btn-info btn-lg btn-block" value="로그인">
           <%#= f.submit "로그인" %> 
          </div>
        
        <% end %>
        
        <%= render "devise/shared/links" %>
        </div>
          
          </div>
        </div>
      </div>
      
      
      
      
    </div><!--div class="col-md-4"-->
  </div><!--div class="row"-->
</div>


</div>




