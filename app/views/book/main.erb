
<div style="background-color:lightgray; padding-top:150px;padding-bottom:150px" id="menu_font">
  
  <div class="row">
    
    <div class="col-md-2 col-md-xs-2"></div>
      
      <div class="col-md-8 col-md-xs-8" align="center">
        <div class="panel panel-default">
          <div class="panel-body">
            
            <img onmouseover="bigImg(this)" onmouseout="normalImg(this)" border="0" src="http://www.hindiquotes.co.in/wp-content/uploads/2015/09/54cbd8653d000.jpg" alt="Smiley" width="32" height="32">
            
            <h2>R E S E R V A T I O N</h2> 
            <hr>
            
            <% @building.each do |b| %>
            
              <a href="/book/detail_info/<%=b.id%>"  id="menu_font">
                <div class="col-md-4 col-sm-6" id="<%=b.en_name%>">
                  <div class="thumbnail">
                    <!--<div class="icon_">-->
                  <!--<div style="background:#98bf21; height:100px; width:100px; position:absolute;" >-->
                    <img src="<%=b.img%>" alt="..." class="img-responsive">
                  <!--</div>-->
                    <!--</div>-->
                    <div class="caption">
                      <h4><%=b.name%> <br><small>(<%=b.en_name%>)</small></h4>
                      
                    </div>
                  </div>
                </div>
              </a>
            <%end%>
            
            
          </div><!--<div class="panel-body">-->
        </div><!--<div class="panel panel-default">-->
      </div><!--<div class="col-md-8 col-md-xs-8">-->
      
    <div class="col-md-2 col-md-xs-2" id="#side">
       <%= render "book/side" %>
    </div>
    
  </div><!--div class row-->
</div><!--<div style="background-color:lightgray">-->








